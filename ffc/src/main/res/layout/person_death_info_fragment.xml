<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/card_margin_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/card_padding_vertical">

        <TextView
            android:drawableStart="@drawable/ic_gravestone_black_24dp"
            android:drawablePadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_padding_horizontal"
            android:text="@string/death_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/card_padding_horizontal"
            android:text="@string/death_date"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/personDeathDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_start_horizontal_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="10 ต.ค. 2560" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/death_causes"
            android:layout_marginStart="@dimen/card_padding_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/text_secondary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/personDeathCause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/lookup_item" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
