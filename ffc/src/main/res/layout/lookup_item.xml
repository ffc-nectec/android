<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/lookupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toStartOf="@+id/lookupName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Z00.3X" />

    <TextView
        android:id="@+id/lookupName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_start_horizontal_padding"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lookupId"
        tools:text="การตรวจทั่วไปและสืบค้นโรคในบุคคลที่ไม่มีอาการผิดปกติหรือไม่มีบันทึกการวินิจฉัย" />

    <TextView
        android:id="@+id/lookupCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lookupName"
        app:layout_constraintTop_toBottomOf="@+id/lookupName"
        tools:text="General examination and investigation of persons without complaint or reported diagn" />

    <TextView
        android:id="@+id/lookupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_label_dark"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/text_secondary_inverse"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop"
        tools:text="Principle DX" />
</androidx.constraintlayout.widget.ConstraintLayout>
